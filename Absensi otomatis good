    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Script untuk form submission
            const leadForm = document.getElementById('lead-form');
            const finalForm = document.getElementById('final-form');
            const confirmationMessage = document.getElementById('confirmation-message');
            const finalConfirmationMessage = document.getElementById('final-confirmation-message');

            const handleFormSubmit = (event, messageElement) => {
                event.preventDefault();
                messageElement.classList.remove('hidden');
                setTimeout(() => {
                    messageElement.classList.add('hidden');
                }, 3000); // Hide after 3 seconds
                event.target.reset(); // Reset the form
            };

            leadForm.addEventListener('submit', (e) => handleFormSubmit(e, confirmationMessage));
            finalForm.addEventListener('submit', (e) => handleFormSubmit(e, finalConfirmationMessage));

            // Script untuk mengisi tabel absensi secara dinamis
            const populateAttendanceTable = () => {
                const table = document.getElementById('attendance-table');
                const theadRow = table.querySelector('thead tr');
                const tbody = table.querySelector('tbody');

                const today = new Date();
                const daysInMonth = new Date(today.getFullYear(), today.getMonth() + 1, 0).getDate();

                // Clear existing headers except the first one
                while (theadRow.children.length > 1) {
                    theadRow.removeChild(theadRow.lastChild);
                }

                // Create day headers
                for (let i = 1; i <= daysInMonth; i++) {
                    const th = document.createElement('th');
                    th.scope = 'col';
                    th.className = 'px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider';
                    th.textContent = `${i}`;
                    theadRow.appendChild(th);
                }
            };

            populateAttendanceTable();

            // Script untuk animasi fade-in saat scroll
            const fadeInSections = document.querySelectorAll('.fade-in-section');
            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        observer.unobserve(entry.target);
                    }
                });
            }, observerOptions);

            fadeInSections.forEach(section => {
                observer.observe(section);
            });
        });
    </script>
